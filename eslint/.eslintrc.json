{
  // registers this plugin
  "plugins": ["prettier"],
  "rules": {
    // turns on the rule provided by this plugin, which runs Prettier from within ESLint
    "prettier/prettier": "error",
    // turns off two ESLint core rules that are problematic with this plugin
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off"
  },
  // enables the config from eslint-config-prettier, which turs off some ESLint rules that conflict with Prettier
  "extends": ["plugin:prettier/recommended"]
}
